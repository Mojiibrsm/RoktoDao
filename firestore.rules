
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is an admin by looking at their document in the 'donors' collection.
    function isAdmin() {
      return get(/databases/$(database)/documents/donors/$(request.auth.uid)).data.isAdmin == true;
    }

    // Donors collection rules
    match /donors/{userId} {
      // Anyone can read donor profiles for public listings.
      allow read: if true;
      
      // An authenticated user can create their own document.
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // A user can update their own profile, or an admin can update any profile.
      allow update: if request.auth != null && (request.auth.uid == userId || isAdmin());
      
      // Only admins can delete users.
      allow delete: if isAdmin();
    }

    // Blood requests collection rules
    match /requests/{requestId} {
      // Anyone can read blood requests.
      allow read: if true;
      
      // Anyone can create a blood request.
      allow create: if true;
      
      // Only admins can update (approve, fulfill) or delete requests.
      allow update, delete: if isAdmin();
    }

    // Blogs collection rules
    match /blogs/{blogId} {
      // Anyone can read blog posts.
      allow read: if true;
      
      // Only admins can create, update, or delete blog posts.
      allow write: if isAdmin();
    }

    // Gallery collection rules
    match /gallery/{imageId} {
      // Anyone can read gallery images.
      allow read: if true;
      
      // Only admins can add or delete gallery images.
      allow write: if isAdmin();
    }
    
    // Marquee-notices collection rules
    match /marquee-notices/{noticeId} {
      // Anyone can read marquee notices.
      allow read: if true;
      
      // Only admins can manage notices.
      allow write: if isAdmin();
    }
    
    // Moderators collection rules
    match /moderators/{moderatorId} {
        // Anyone can read team/moderator info.
        allow read: if true;
        
        // Only admins can manage moderators.
        allow write: if isAdmin();
    }

    // Settings collection rules
    match /settings/{settingsId} {
        // Anyone can read global settings.
        allow read: if true;

        // Only admins can change settings.
        allow write: if isAdmin();
    }
  }
}
