
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if a user is an admin
    function isAdmin() {
      return get(/databases/$(database)/documents/donors/$(request.auth.uid)).data.isAdmin == true;
    }

    // Helper function to check if a user is the owner of a document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Donors collection (also serves as users collection)
    match /donors/{userId} {
      allow read; // Anyone can read donor profiles for search functionality
      allow create: if isOwner(userId); // Anyone can sign up and create their own profile
      allow update: if isOwner(userId) || isAdmin(); // Users can update their own profile, admins can update any
      allow delete: if isAdmin(); // Only admins can delete users
    }

    // Blood Requests collection
    match /requests/{requestId} {
      allow read; // Anyone can read blood requests
      allow create: if request.auth != null; // Any authenticated user can create a request
      allow update: if isAdmin() || (request.auth != null && request.resource.data.responders.hasAny([request.auth.uid])) || (get(/databases/$(database)/documents/requests/$(requestId)).data.uid == request.auth.uid); // Admins, responders, or the creator can update
      allow delete: if isAdmin() || isOwner(resource.data.uid); // Admins or the creator can delete
    }

    // Settings collection
    match /settings/global {
      allow read; // Anyone can read settings
      allow write: if isAdmin(); // Only admins can change settings
    }

    // Marquee Notices collection
    match /marquee-notices/{noticeId} {
      allow read; // Publicly readable
      allow write: if isAdmin(); // Only admins can manage notices
    }
    
    // Moderators collection
    match /moderators/{modId} {
      allow read; // Publicly readable
      allow write: if isAdmin(); // Only admins can manage moderators
    }

    // Blog Posts collection
    match /blogs/{blogId} {
      allow read; // Publicly readable
      allow write: if isAdmin(); // Only admins can manage blog posts
    }
    
    // Gallery Images collection
    match /gallery/{imageId} {
      allow read; // Publicly readable (we filter for 'approved' on the client)
      allow create: if request.auth != null; // Any logged-in user can submit an image
      allow update, delete: if isAdmin(); // Only admins can approve/delete images
    }

    // Feedback collection
    match /feedback/{feedbackId} {
      allow create; // Anyone can submit feedback
      allow read, update, delete: if isAdmin(); // Only admins can manage feedback
    }

    // SMS Logs collection
    match /sms_logs/{logId} {
      allow create; // The backend service can create logs
      allow read, update, delete: if isAdmin(); // Only admins can manage logs
    }
  }
}
