
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function isAdmin() {
      return exists(/databases/$(database)/documents/donors/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/donors/$(request.auth.uid)).data.isAdmin == true;
    }

    // Donors can be queried by anyone if available, but only the user or an admin can write.
    match /donors/{userId} {
      allow get: if resource.data.isAvailable == true || resource.data.isPinned == true || request.auth.uid == userId || isAdmin();
      allow list: if request.query.where.isAvailable == true || isAdmin();
      allow create: if request.auth.uid == userId; // Allow user to create their own profile
      allow update, delete: if request.auth.uid == userId || isAdmin();
    }
    
    // Requests can be read by anyone, but only created/updated by users/admins.
    match /requests/{requestId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth.uid == resource.data.uid || isAdmin();
      allow delete: if isAdmin();
    }

    // Blogs can be read by anyone, but only written by admins.
    match /blogs/{blogId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Moderators can be read by anyone, but only written by admins.
    match /moderators/{moderatorId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Gallery images can be listed if approved. Anyone can get an approved image.
    // Logged-in users can create. Admins can update/delete.
    match /gallery/{imageId} {
      allow read, list: if true;
      allow create: if request.auth != null;
      allow update, delete: if isAdmin();
    }

    // Site settings can be read by anyone, but only written by admins.
    match /settings/global {
      allow get: if true;
      allow write: if isAdmin();
    }

    // Marquee notices can be read by anyone, written by admins.
    match /marquee-notices/{noticeId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // OTP codes should not be readable by clients.
    match /otp_codes/{phone} {
        allow read, write: if false;
    }

    // Feedback should only be written by clients, and managed by admins
    match /feedback/{feedbackId} {
      allow read, update, delete: if isAdmin();
      allow create: if true;
    }

    // SMS logs should only be written by the server, and read by admins
    match /sms_logs/{logId} {
      allow read: if isAdmin();
      allow write: if false; // Should be written by server functions only
    }

  }
}
