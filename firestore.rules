
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin role
    function isAdmin() {
      return exists(/databases/$(database)/documents/donors/$(request.auth.uid)) && 
             get(/databases/$(database)/documents/donors/$(request.auth.uid)).data.isAdmin == true;
    }

    // Donors Collection
    match /donors/{userId} {
      // Admins can do anything
      // Users can get their own document
      allow get: if request.auth.uid == userId || isAdmin();
      
      // Public can search for available donors.
      // Admins can list all.
      allow list: if request.query.where.isAvailable == true || isAdmin();
      
      // Users can create their own profile
      allow create: if request.auth.uid == userId;

      // Users can update their own profile
      // Admins can update any profile
      allow update: if request.auth.uid == userId || isAdmin();
      
      // Admins can delete
      allow delete: if isAdmin();
    }
    
    // Requests Collection
    match /requests/{requestId} {
      // ANYONE can read/list requests (for homepage stats and requests page)
      allow read: if true;
      
      // Logged-in users can create requests
      allow create: if request.auth != null;
      
      // Admins can update any request
      allow update: if isAdmin();
      
      // Admins can delete requests
      allow delete: if isAdmin();
    }
    
    // Blogs Collection
    match /blogs/{blogId} {
      // Allow anyone to read blog posts
      allow read: if true;
      // Allow only admins to create, update, or delete posts
      allow write: if isAdmin();
    }

    // Moderators Collection
    match /moderators/{moderatorId} {
      // Allow anyone to read moderators list (for team/about page)
      allow read: if true;
      // Allow only admins to create, update, or delete moderators
      allow write: if isAdmin();
    }

    // Gallery Collection
    match /gallery/{imageId} {
      // Allow anyone to list APPROVED gallery images
      allow list: if request.query.where.status == 'approved' || isAdmin();
      // Allow anyone to get a single APPROVED image document
      allow get: if resource.data.status == 'approved' || isAdmin();
      
      // Allow only logged-in users to create (upload)
      allow create: if request.auth != null;

      // Allow only admins to update (approve) or delete
      allow update, delete: if isAdmin();
    }
    
    // Marquee Notices
    match /marquee-notices/{noticeId} {
      // Allow anyone to read notices
      allow read: if true;
      // Allow only admins to write
      allow write: if isAdmin();
    }

    // Settings Collection
    match /settings/global {
      // Allow anyone to read site settings (for homepage)
      allow get: if true;
      // Allow only admins to update settings
      allow write: if isAdmin();
    }

    // OTP Codes
    match /otp_codes/{phone} {
        // Only backend can create/write OTPs
        allow read, write: if false; 
    }

    // Feedback Collection
    match /feedback/{feedbackId} {
        // Only backend (via admin sdk) should create
        allow create: if false; 
        // Only admins can view/manage feedback
        allow read, update, delete, list: if isAdmin();
    }

    // SMS Logs
    match /sms_logs/{logId} {
       // Only backend can create
       allow create: if false;
       // Only admins can read
       allow read, list: if isAdmin();
    }

  }
}
