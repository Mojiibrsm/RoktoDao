rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/donors/$(request.auth.uid)).data.isAdmin == true;
    }

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    function isVerifiedUser() {
      return request.auth != null;
    }
    
    // Collections
    match /donors/{donorId} {
      // Allow anyone to read donor profiles that are marked as available
      allow read: if resource.data.isAvailable == true || isOwner(donorId) || isAdmin();
      // Allow any authenticated user to create their own profile
      allow create: if isOwner(donorId);
      // Allow users to update/delete their own profile, or admins to update/delete any profile
      allow update, delete: if isOwner(donorId) || isAdmin();
    }
    
    // Publicly listable collections for anyone
    match /blogs/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /gallery/{docId} {
      allow read: if resource.data.status == 'approved';
      allow create: if isVerifiedUser();
      allow write: if isAdmin();
    }
    
    match /moderators/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /marquee-notices/{docId} {
       allow read: if true;
       allow write: if isAdmin();
    }
    
    // Blood Requests
    match /requests/{reqId} {
      allow read, create: if true;
      allow update, delete: if isAdmin();
    }

    // Settings
    match /settings/global {
    	allow read, write: if isAdmin();
    }
    match /settings/stats {
    	allow read: if true;
      allow write: if isAdmin();
    }
    
    // Sensitive data - only accessible by server/admin
    match /otp_codes/{docId} {
      allow read, write: if false; // Should be handled by server-side logic (e.g. cloud functions or admin sdk)
    }
    
     match /sms_logs/{docId} {
       allow read, write: if isAdmin();
     }

     match /feedback/{docId} {
       allow read, write: if isAdmin();
       allow create: if true;
     }
  }
}
