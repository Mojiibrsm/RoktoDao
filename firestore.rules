rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  
    // --- Helper Functions ---
    function isUser(uid) {
      return request.auth != null && request.auth.uid == uid;
    }

    function isAdmin() {
      // Check if the user is authenticated and has an admin flag in their donor profile
      return request.auth != null &&
        exists(/databases/$(database)/documents/donors/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/donors/$(request.auth.uid)).data.isAdmin == true;
    }

    // --- Public Read Collections ---
    match /requests/{document=**} {
      allow read, create;
      allow update, delete: if isAdmin() || isUser(resource.data.uid);
    }
    
    match /blogs/{document=**} {
      allow read;
      allow write: if isAdmin();
    }
    
    match /gallery/{document=**} {
      allow read: if resource.data.status == 'approved';
      allow create: if request.auth != null;
      allow update, delete: if isAdmin();
    }

    match /moderators/{document=**} {
      allow read;
      allow write: if isAdmin();
    }

    match /marquee-notices/{document=**} {
      allow read;
      allow write: if isAdmin();
    }

    // --- Donors Collection ---
    match /donors/{userId} {
      // Admins can do anything
      allow write: if isAdmin();
      
      // Users can create their own profile
      allow create: if isUser(userId);
      
      // Users can update their own profile
      allow update: if isUser(userId);
      
      // Public can read donor info if they are available OR pinned. Admins can read all.
      allow get, read: if resource.data.isAvailable == true || resource.data.isPinned == true || isAdmin();
      
      // Public can query for available donors (for search page). Admins can list all.
      allow list: if request.query.where.isAvailable == true || isAdmin();
    }

    // --- Sensitive Collections ---
    match /settings/stats {
        allow get;
        allow write: if isAdmin();
    }

    match /settings/{document=**} {
      allow read, write: if isAdmin();
    }
    
    match /otp_codes/{document=**} {
      allow read, write: if false; // No client access
    }
    
    match /sms_logs/{document=**} {
        allow read, write: if false; // No client access
    }

    match /feedback/{document=**} {
        allow create; // Allow anyone to create feedback
        allow read, update, delete: if isAdmin(); // Only admin can manage feedback
    }
  }
}
