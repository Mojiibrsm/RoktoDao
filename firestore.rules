rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check for admin role
    function isAdmin() {
      return get(/databases/$(database)/documents/donors/$(request.auth.uid)).data.isAdmin == true;
    }

    // Donors Collection
    match /donors/{userId} {
      // Anyone can create their own user document (signup)
      allow create: if request.auth.uid == userId;

      // Users can update or delete only their own profile
      // Admins can update or delete any user's profile
      allow update, delete: if request.auth.uid == userId || isAdmin();
      
      // Allow reading/getting a specific donor document if they are available OR pinned. Admins can get any.
      allow read, get: if (resource.data.isAvailable == true || resource.data.isPinned == true) || isAdmin();

      // Only admins can list all donors. Public queries are handled by the `read` rule above.
      allow list: if isAdmin();
    }

    // Requests Collection
    match /requests/{requestId} {
      // Anyone can read requests, and any authenticated user can create one
      allow read: if true;
      allow create: if request.auth != null;
      
      // Only admins can update or delete requests
      allow update, delete: if isAdmin();
    }
    
    // Blogs Collection
    match /blogs/{blogId} {
        // Anyone can read blog posts
        allow read: if true;
        // Only admins can create, update, or delete blog posts
        allow write: if isAdmin();
    }

    // Gallery Collection
    match /gallery/{imageId} {
      // Anyone can read approved gallery images
      allow read: if resource.data.status == 'approved';
      // Any authenticated user can create (upload) an image (status will be pending)
      allow create: if request.auth != null;
      // Only admins can update (approve) or delete images
      allow update, delete: if isAdmin();
    }

    // Marquee Notices
    match /marquee-notices/{noticeId} {
      // Anyone can read notices
      allow read: if true;
      // Only admins can write notices
      allow write: if isAdmin();
    }

    // Moderators Collection
    match /moderators/{modId} {
       // Anyone can read moderator info (for the team page)
      allow read: if true;
      // Only admins can write moderator info
      allow write: if isAdmin();
    }
    
    // Feedback/Reports Collection
    match /feedback/{feedbackId} {
      // No public read access
      allow read: if isAdmin();
      // Anyone can create feedback (contact form submission)
      allow create: if true;
      // Only admins can update/delete
      allow update, delete: if isAdmin();
    }
    
    // SMS Logs Collection (server-side only)
    match /sms_logs/{logId} {
      // No client access at all
      allow read, write: if false;
    }

    // OTP Codes Collection (server-side only)
    match /otp_codes/{phone} {
       // No client access at all
      allow read, write: if false;
    }

    // Settings Collection
    match /settings/{docId} {
      // Allow anyone to read the 'stats' document for homepage counters
      allow get: if docId == 'stats';
      // Only admins can write to settings
      allow write: if isAdmin();
      // Disallow listing and reading other settings docs
      allow read, list: if docId == 'stats' && isAdmin();
    }
  }
}
